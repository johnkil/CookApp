<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="DashboardButton">
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:drawablePadding">5dp</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#555</item>
        <item name="android:background">@null</item>
    </style>
    
    <style name="Theme.SherlockCustom" parent="@style/Theme.Sherlock.Light">
    	<item name="abBackground">@drawable/action_bar_background</item>
    	<item name="abTitleTextStyle">@style/CustomTitle</item>
    </style>
    
    <style name="CustomTitle" parent="TextAppearance.Widget.Title">
    	<item name="android:textColor">#FFF</item>
    	<item name="android:textStyle">bold</item>
    </style>
    
</resources>